<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m"
						 xmlns:f="sap.ui.layout.form">
	<f:SimpleForm>
		<f:content>
			<Label text="Product Id"></Label>
			<Text text="{PRODUCT_ID}"></Text>
			<Label text="SUPPLIER ID"></Label>
			<Text text="{SUPPLIER_ID}"></Text>
			<Label text="SUPPLIER NAME"></Label>
			<Text text="{SUPPLIER_NAME}"></Text>
			
			<Label text="WebSite"></Label>
			<Text text="{ToSupplier/LEGAL_FORM}"></Text>
			
			<Label text="EMAIL ADDRESS"></Label>
			<Text text="{ToSupplier/EMAIL_ADDRESS}"></Text>
			
			<Label text="WEB ADDRESS"></Label>
			<Text text="{ToSupplier/WEB_ADDRESS}"></Text>	
			
			<Label  text="Name"></Label>
			
			<Input id="prodname" value="{NAME}"></Input>
			<Label  text="description"></Label>
			<Input id="proddesc" value="{DESCRIPTION}" width="100%"></Input>
			<Button text="Click Me" press="onClick"></Button>
			<Label></Label>
			<Image id="zkas"></Image>
		</f:content>
	</f:SimpleForm>
</core:FragmentDefinition>